<section id="appointments">
    <h1 class="user-heading"> <span>Book</span> Now </h1>

    <div class="row">

        <div class="image">
            <img src="/images/book-img.svg" alt="">
        </div>

        <form action="/users">
            
            <h3>Book Appointment</h3>
            
            <div class="input-container">
                <input type="text" placeholder="Name" class="inputBox">
                <input type="tel" placeholder="Contact Number" class="inputBox">
                <input type="email" placeholder="your-email@example.com" class="inputBox">
                <input type="date" class="inputBox">
                <select name="healthCenter" id="healthCenter" class="inputBox">
                    <option value="1">Sample 1</option>
                    <option value="2">Sample 2</option>
                    <option value="3">Sample 3</option>
                    <option value="4">Sample 4</option>
                    <option value="5">Sample 5</option>
                </select>
            </div>

            <input type="submit" value="Book Now" class="user-btn">
        </form>


    </div>

</section>
<section class="signIn">

    <div class="image_container">
        <img src="/images/img-login.svg" alt="">
    </div>

    <div class="signIn-form">
        <h1 class="signIn_header">Login</h1>
        <span class="alt-text">Don't have an account yet? </span> <a class="register_link" href="/users/new"> Register Now </a>

        <form action="/signIn" method="post" id="signIn_Form">
            <div class="field">
                <h2 class="field_heading">Email Address</h2>
                <input class="input_field" placeholder="example@123.com" type="email" name="email" id="semail">
            </div>

            <div class="field">
                <div class="field_headings">
                    <h2 class="field_heading">Password</h2>
                    <a href="/forgot-password" class="forgot_password">Forgot Password?</a>
                </div>
                <input class="input_field" placeholder="password" type="password" name="password" id="spassword">
            </div>

            <div class="check">
                <input type="checkbox" name="remember" id="remember"> 
                <span> Remember Me </span>
            </div>

            <div class="form-btn">
                <input class="input_btn" type="submit" value="LOGIN">
            </div>

        </form>

        <hr/>
        
        <div class="btn-container">
            <div id="gbtn" class="provider_btn">
                <img class="provider_logo" src="/images/google-logo.ico" alt="">
                <a class="provider-link google" href="/"> Google </a>
            </div>

            <div id="fbtn" class="provider_btn fbtn">
                <img class="provider_logo" class="google-logo" src="/images/fb-logo.png" alt="">
                <a class="provider-link fb" href="/"> FaceBook </a>
            </div>
        </div>

    </div>

    
</section>